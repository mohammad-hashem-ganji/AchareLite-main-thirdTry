<h1>Show List Of Services With Subcategory Id</h1>

<form asp-action="Create" asp-controller="Service" class="ms-3">
  <button type="submit" class="btn btn-primary mx-auto">ایجاد</button>
</form>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">نام</th>
      <th scope="col">عملیات</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in ViewData["serviceDtos"] as List<App.Domain.Core.CategoryService.DTOs.ServiceDto>)
    {
      <tr>
        <th scope="row">1</th> <td>@item.Title</td>
        <td>
          <div class="btn-group" role="group" aria-label="Service Actions">
            <a asp-action="Edit" asp-controller="Service" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-square"></i>ویرایش</a>
            <form asp-action="Delete" asp-controller="Service">
              <input value="@item.Id" name="id" type="hidden" />
              <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i>حذف</button>
            </form>
          </div>
        </td>
      </tr>
    }
  </tbody>
</table>

@using App.Domain.Core.CategoryService.DTOs;
@{
    ViewData["Title"] = "ShowMainPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ShowMainPage</h1>
@{
    var mainCategories = ViewData["mainCategories"] as List<MainCategoryDto>;
    //var cancellationToken = (CancellationToken)ViewData["canellationToken"] ;
}
<body>
  <main class="main">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <div class="hero-banner">
            <img src="~/images/hero-banner.jpg" class="img-fluid" alt="Hero banner image">  <div class="hero-text">
              <h1>با آچاره، زندگی آسون میشه</h1>  <p>خدمات متنوع و با کیفیت رو به راحتی آنلاین رزرو کنید</p>
              <a href="@Url.Action("Services", "Home")" class="btn btn-primary">مشاهده خدمات</a>  </div>
          </div>
          <div class="container-fluid ">
          <div class="service-categories">
            <h3 class="section-title">دسته بندی خدمات</h3>
            <div class="row">
                            @foreach (var category in mainCategories)
                            {
                    <div class="container-fluid col-md-2 mb-3">
                      <div class="card">
                        <img src="~/assets/img/category/@(category.Id).png" class="card-img-top" alt="@category.Title">  <div class="card-body">
                          <h5 class="card-title">@category.Title</h5>
                          @*<p class="card-text">@category.Description</p>*@
                          <a asp-controller="Home" asp-action="ShowSubCategories" asp-route-Id="@category.Id">مشاهده جزئیات</a>
              </div>
             </div>
            </div>
                           }
        <div> 
      </div>
     </div>
    </div>
</body>

